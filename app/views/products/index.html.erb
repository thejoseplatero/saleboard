	
	<div class="hero-unit">
  <h1>Products</h1>
   <% if user_signed_in? %>	
        <%= link_to "Sell Something", new_product_path, :class=>'btn btn-primary'%></li>
      <%end%>	
</div>

<div class='row'>
	<% @products.each_with_index do |p, i| %>
		<% if i % 4 == 0 %>
			</div><div class ='row'>
		<% end %>
	<div class ='span2'>
		<ul class ='thumbnails'>
			<li class ='span2'>
				<div class='thumbnail'>
					<%= image_tag p.image.url(:medium)%> 	
					<h3>
		 				<%= link_to p.name, product_path(p.id)  %>
					</h3>
					<p> 
		 				<%= p.description %> it costs $<%= p.price%> posted <%= time_ago_in_words(p.created_at,
		 				include_seconds = false)%> ago it was posted from <%=p.address%>
		 			</p>
		 			<p>
						<% if current_user == p.user%>
							<%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small'  %> 
							<%= link_to 'Edit', edit_product_path(p), :class => 'btn btn-small' %>
						<%end%>
					</p>
					<p>
						<%= render p.comments %>
						<%= render 'comments/form', comment: p.comments.build, product: p %>		
					</p>	
			</div>
			</li>
		</ul>	
	</div>
	<%end%>
	
