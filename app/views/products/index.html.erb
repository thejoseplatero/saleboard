
<h1> All Products </h1>

<ul>
	<% @products.each do |p| %>
		<li>
 		<%= image_tag p.image.url(:thumb)%>  
			<%= p.user.name %>  has posted 
			<%= link_to p.name, product_path(p.id)  %>, 
			<%= p.description %> it costs $<%= p.price%> posted <%= time_ago_in_words(p.created_at, include_seconds = false)  %> ago
 
				<td> <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small'  %> </td>


			<ul>
				<%= render p.comments %>
				<li><%= render 'comments/form', comment: p.comments.build, product: p %>	</li>
			</ul>
		</li>

	<% end %>
	<%= link_to "New Product", new_product_path, :class => 'btn btn-large' %>
</ul>