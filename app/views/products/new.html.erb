<h1> New Product </h1>

<% post.errors.each |errors| %> 


	<%= form_for @product, :url => products_path, :html => {multipart: true} do |f| %>
<div>
	<%= f.label :name %>
	<%= f.text_field :name %>
	
</div>

<div>
	<%= f.file_field :image %>
</div>

<div>
	<%= f.label :price %>
	<div class="input-prepend">	
		<span class="add-on">$</span>
		<%= f.text_field :price, :class => 'span2' %>
	</div>
</div>

<div>
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>	
<div>
	<%=f.submit%>
</div>
<% end %>
