,<h1> New Product </h1>


<div>
	<%= form_for @product do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
</div>

<div>
	<%= f.label :price %>
	<div class="input-prepend">	
		<span class="add-on">$</span>
		<%= f.text_field :price, :class => 'span2' %>
	</div>
</div>

<div>
	<%= f.label :description %>
	<%= f.text_area :description %>
</div>
<%=f.submit%>
<% end %>