<%= form_tag products_path, method: :get, :class=> 'navbar-search pull-right form-inline navbar-text' do %>
  <%=label_tag :description, "Find" %>
  <%= text_field_tag :description, params[:description], :class => "search-query input-medium" %>
  <%= label_tag :search, "within" %>
  <%= select_tag :distance, options_for_select([25, 50, 100]), :class => "input-small"%> of
  <%= text_field_tag :search, params[:search], :class => "search-query input-small"%> 
  <%= submit_tag "search", :name=> nil, :class => 'btn btn-small'%>
<% end %>
